<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityUpdateTeacher">

    <ImageButton
        android:id="@+id/ibtnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_arrow_back_black_24dp"/>

    <TextView
        android:layout_marginTop="50dp"
        android:textColor="#F44336"
        android:textStyle="bold"
        android:textSize="28sp"
        android:gravity="center"
        android:text="Cập Nhật Thông Tin Giáo Viên"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <EditText
        android:id="@+id/edtUpdateTeacherName"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:hint="Tên giáo viên"
        android:layout_width="300dp"
        android:layout_height="60dp"></EditText>
    <EditText
        android:id="@+id/edtUpdateDOBTeacher"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:hint="Ngày sinh"
        android:layout_width="300dp"
        android:layout_height="60dp"></EditText>
    <TextView
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="Giới tính : "
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"></TextView>
    <RadioGroup
        android:paddingTop="15dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="70dp">
        <RadioButton
            android:checked="true"
            android:textColor="#000000"
            android:id="@+id/rbtnMale"
            android:text="Nam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></RadioButton>
        <RadioButton
            android:textColor="#000000"
            android:id="@+id/rbtnFemale"
            android:layout_marginLeft="100dp"
            android:text="Nữ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></RadioButton>
    </RadioGroup>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:text="Lớp chủ nhiệm :"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black"/>
        <Spinner
            android:id="@+id/spnUpdateClass"
            android:layout_gravity="center"
            android:layout_width="170dp"
            android:layout_height="60dp"></Spinner>

    </LinearLayout>
    <Button
        android:id="@+id/btnUpdateTeacher"
        android:layout_marginTop="20dp"
        android:text="Cập Nhật"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Button>
</LinearLayout>